<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgCookie"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/cookie"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello cookie"
        android:layout_above="@id/imgCookie"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="42sp" />

    <ImageView
        android:id="@+id/imgMinion"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_alignEnd="@+id/lblTotal"
        android:layout_alignRight="@+id/lblTotal"
        android:layout_below="@+id/imgCookie"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/minion" />

</RelativeLayout>
